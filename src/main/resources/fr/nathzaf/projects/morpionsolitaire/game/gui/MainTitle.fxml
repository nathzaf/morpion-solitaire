<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.nathzaf.projects.morpionsolitaire.game.gui.MainTitleController">
   <children>
      <ImageView fitHeight="416.0" fitWidth="712.0" layoutX="-112.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@backgound.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="playerNameTextField" alignment="CENTER" layoutX="216.0" layoutY="112.0">
         <font>
            <Font name="The Wild Breath of Zelda" size="16.0" />
         </font></TextField>
      <RadioButton fx:id="mode5TRadioButton" layoutX="245.0" layoutY="172.0" mnemonicParsing="false" onAction="#getMode" text="5T" textFill="WHITE">
         <toggleGroup>
            <ToggleGroup fx:id="mode" />
         </toggleGroup>
         <font>
            <Font name="The Wild Breath of Zelda" size="15.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="mode5DRadioButton" layoutX="319.0" layoutY="172.0" mnemonicParsing="false" onAction="#getMode" text="5D" textFill="WHITE" toggleGroup="$mode">
         <font>
            <Font name="The Wild Breath of Zelda" size="15.0" />
         </font></RadioButton>
      <Text fill="WHITE" layoutX="197.0" layoutY="92.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your name here">
         <font>
            <Font name="The Wild Breath of Zelda" size="28.0" />
         </font></Text>
      <Button layoutX="213.0" layoutY="320.0" mnemonicParsing="false" onAction="#displayRanking" text="Ranking">
         <font>
            <Font name="The Wild Breath of Zelda" size="19.0" />
         </font></Button>
      <CheckBox fx:id="sharpModeCheckBox" layoutX="269.0" layoutY="216.0" mnemonicParsing="false" text="# Mode" textFill="WHITE">
         <font>
            <Font name="The Wild Breath of Zelda" size="15.0" />
         </font></CheckBox>
      <Button layoutX="340.0" layoutY="320.0" mnemonicParsing="false" onAction="#quit" text="Quit">
         <font>
            <Font name="The Wild Breath of Zelda" size="19.0" />
         </font>
      </Button>
      <Button layoutX="251.0" layoutY="256.0" mnemonicParsing="false" onAction="#startGame" text="Launch game">
         <font>
            <Font name="The Wild Breath of Zelda" size="19.0" />
         </font>
      </Button>
      <ImageView fitHeight="79.0" fitWidth="80.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
