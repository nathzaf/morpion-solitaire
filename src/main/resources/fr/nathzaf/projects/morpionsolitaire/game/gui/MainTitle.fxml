<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.nathzaf.projects.morpionsolitaire.game.gui.MainTitleController">
   <children>
      <TextField fx:id="playerNameTextField" alignment="CENTER" layoutX="220.0" layoutY="112.0" />
      <Button layoutX="251.0" layoutY="260.0" mnemonicParsing="false" onAction="#startGame" text="Launch game !" />
      <RadioButton fx:id="mode5TRadioButton" layoutX="245.0" layoutY="172.0" mnemonicParsing="false" onAction="#getMode" text="5T">
         <toggleGroup>
            <ToggleGroup fx:id="mode" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="mode5DRadioButton" layoutX="319.0" layoutY="172.0" mnemonicParsing="false" onAction="#getMode" text="5D" toggleGroup="$mode" />
      <Text layoutX="242.0" layoutY="91.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your name here" />
      <Button layoutX="269.0" layoutY="316.0" mnemonicParsing="false" onAction="#displayRanking" text="Ranking" />
      <CheckBox fx:id="sharpModeCheckBox" layoutX="269.0" layoutY="216.0" mnemonicParsing="false" text="# Mode" />
   </children>
</AnchorPane>
