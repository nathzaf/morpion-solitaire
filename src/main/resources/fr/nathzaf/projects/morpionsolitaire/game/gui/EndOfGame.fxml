<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.nathzaf.projects.morpionsolitaire.game.gui.EndOfGameController">
   <children>
      <ImageView fitHeight="446.0" fitWidth="734.0" layoutX="-134.0" layoutY="-11.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@backgound.jpg" />
         </image>
      </ImageView>
      <Text fill="WHITE" layoutX="216.0" layoutY="109.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game over!">
         <font>
            <Font name="The Wild Breath of Zelda" size="36.0" />
         </font></Text>
      <Text fx:id="playerScoreText" fill="WHITE" layoutX="110.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
         <font>
            <Font name="The Wild Breath of Zelda" size="28.0" />
         </font></Text>
      <Button layoutX="81.0" layoutY="286.0" mnemonicParsing="false" onAction="#newGame" text="New game">
         <font>
            <Font name="The Wild Breath of Zelda" size="21.0" />
         </font></Button>
      <Button layoutX="426.0" layoutY="287.0" mnemonicParsing="false" onAction="#quit" text="Quit">
         <font>
            <Font name="The Wild Breath of Zelda" size="21.0" />
         </font></Button>
      <Button layoutX="258.0" layoutY="286.0" mnemonicParsing="false" onAction="#displayRanking" text="Ranking">
         <font>
            <Font name="The Wild Breath of Zelda" size="21.0" />
         </font></Button>
   </children>
</AnchorPane>
