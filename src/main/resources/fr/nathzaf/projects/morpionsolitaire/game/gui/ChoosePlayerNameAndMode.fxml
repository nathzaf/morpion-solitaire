<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.nathzaf.projects.morpionsolitaire.game.gui.ChoosePlayerNameAndModeController">
   <children>
      <TextField fx:id="playerNameTextField" alignment="CENTER" layoutX="220.0" layoutY="112.0" promptText="Enter your name here" />
      <Button layoutX="251.0" layoutY="252.0" mnemonicParsing="false" onAction="#startGame" text="Launch game !" />
      <RadioButton fx:id="mode5T" layoutX="245.0" layoutY="182.0" mnemonicParsing="false" onAction="#getMode" text="5T">
         <toggleGroup>
            <ToggleGroup fx:id="mode" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="mode5D" layoutX="319.0" layoutY="182.0" mnemonicParsing="false" onAction="#getMode" text="5D" toggleGroup="$mode" />
   </children>
</AnchorPane>
